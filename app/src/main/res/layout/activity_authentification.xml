<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/gris"
    tools:context="fr.clesspavy.Authentification">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_marginTop="-60dp"
        android:layout_height="250dp"
        android:background="@drawable/bas">

    </RelativeLayout>

    <LinearLayout
            android:layout_marginTop="370dp"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@drawable/bas">

        </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="-670dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="375dp"
        android:layout_height="510dp"
        android:background="@drawable/input">

        <ImageView

            android:id="@+id/login_icon"
            android:layout_width="148dp"
            android:layout_height="152dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="85dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="85dp"
            android:src="@drawable/me2" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_icon"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="187dp"
            android:text="LOGIN"
            android:textColor="@color/blue"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/mdp_auth"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/centre"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Identifiant..."
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/mdp_auth"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/auth1"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/centre"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Mot de passe..."
            android:inputType="numberPassword"
            android:paddingLeft="10dp"
            android:textSize="14dp" />




        <Button
            android:id="@+id/auth1"
            android:layout_width="114dp"
            android:layout_height="60dp"
            android:layout_above="@+id/auth2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/blue"
            android:text="connexion" />
        <Button
            android:id="@+id/auth2"
            android:layout_width="114dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"
            android:backgroundTint="@color/teal_700"
            android:text="inscrivez-vous" />
    </RelativeLayout>

</LinearLayout>